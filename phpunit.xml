<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>app</directory>
        </include>
        <exclude>
            <directory>app/Filament</directory>
            <directory>app/Providers</directory>
            <directory>app/Console</directory>
            <directory>app/Data</directory>
            <directory>app/Enums</directory>
            <directory>app/Events</directory>
            <directory>app/Exceptions</directory>
            <directory>app/Facades</directory>
            <directory>app/Jobs</directory>
            <directory>app/Listeners</directory>
            <directory>app/Livewire</directory>
            <directory>app/Mail</directory>
            <directory>app/Mailboxes</directory>
            <directory>app/Notifications</directory>
            <directory>app/Settings</directory>
            <directory>app/Support</directory>
            <directory>app/Services/Migration</directory>
            <directory>app/Api</directory>
            <directory>app/Attributes</directory>
            <directory>app/Contracts</directory>
            <directory>app/Pipes</directory>
            <directory>app/Rules</directory>
        </exclude>
    </source>
    <coverage>
        <report>
            <clover outputFile="coverage.xml"/>
        </report>
    </coverage>
    <php>
        <ini name="memory_limit" value="2G"/>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="BROADCAST_CONNECTION" value="null"/>
        <env name="CACHE_STORE" value="array"/>
        <env name="DB_CONNECTION" value="mysql"/>
        <env name="DB_HOST" value="127.0.0.1"/>
        <env name="DB_PORT" value="3306"/>
        <env name="DB_DATABASE" value="mi_test"/>
        <env name="DB_USERNAME" value="root"/>
        <env name="DB_PASSWORD" value=""/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>
